---
import Layout from '@/layouts/layout.astro';
import { Icon } from 'astro-icon/components';
import Breadcrumb from '@/components/breadcrumb.astro';
import Button from '@/components/ui/button.astro';

const services = [
  {
    title: 'Websites',
    description: 'Custom-built, responsive websites that convert visitors into customers.',
    icon: 'lucide:layout',
    href: '/websites',
    metrics: ['99% Page Speed Score', '100% Mobile Responsive', '50% Avg. Traffic Increase'],
    image: 'https://images.unsplash.com/photo-1460925895917-afdab827c52f?q=80&w=2070',
  },
  {
    title: 'Marketing',
    description: 'Data-driven digital marketing strategies that deliver measurable results.',
    icon: 'lucide:trending-up',
    href: '/marketing',
    metrics: ['45% SEO Growth', '85% Conversion Rate', '125% Social Engagement'],
    image: 'https://images.unsplash.com/photo-1557804506-669a67965ba0?q=80&w=2074',
  },
  {
    title: 'Applications',
    description: 'Custom web applications that streamline your business operations.',
    icon: 'lucide:code',
    href: '/applications',
    metrics: ['99.9% Uptime', '45% Cost Reduction', '200% Efficiency Gain'],
    image: 'https://images.unsplash.com/photo-1555949963-ff9fe0c870eb?q=80&w=2070',
  },
];

const stats = [
  {
    value: '50+',
    label: 'Active Clients',
  },
  {
    value: '100+',
    label: 'Projects Completed',
  },
  {
    value: '95%',
    label: 'Client Satisfaction',
  },
  {
    value: '5+',
    label: 'Years Experience',
  },
];
---

<Layout
  title='Our Work'
  description='Explore our portfolio of successful websites, marketing campaigns, and web applications. See how we help businesses grow online.'
>
  <div class='flex-1'>
    <section class='relative flex bg-forest bg-cover bg-center bg-no-repeat py-16 md:bg-fixed'>
      <div class='absolute inset-0 size-full bg-background/80'></div>
      <div class='container z-0'>
        <Breadcrumb />
        <div class='mx-auto max-w-4xl text-center'>
          <h1 class='text-4xl font-bold tracking-tight text-foreground sm:text-5xl md:text-6xl'>Our Work</h1>
          <p class='mt-6 text-lg text-muted-foreground sm:text-xl'>
            Discover how we help businesses transform their digital presence through custom websites, strategic
            marketing, and powerful applications.
          </p>
        </div>
      </div>
    </section>

    <section class='py-16 sm:py-20'>
      <div class='container grid gap-16'>
        {
          services.map((service, index) => (
            <div class={`grid gap-8 lg:grid-cols-2 ${index % 2 === 1 ? 'lg:flex-row-reverse' : ''}`}>
              <div class='overflow-hidden rounded-xl bg-card shadow'>
                <img src={service.image} alt={service.title} class='h-full w-full object-cover' loading='lazy' />
              </div>
              <div class='flex flex-col justify-center space-y-6'>
                <div class='flex h-12 w-12 items-center justify-center rounded-lg bg-primary/10'>
                  <Icon name={service.icon} class='h-6 w-6 text-primary' />
                </div>
                <h2 class='text-3xl font-bold tracking-tight text-foreground'>{service.title}</h2>
                <p class='mt-4 text-lg text-muted-foreground'>{service.description}</p>
                <ul class='mt-8 space-y-3'>
                  {service.metrics.map((metric) => (
                    <li class='flex items-center gap-3'>
                      <Icon name='lucide:check' class='h-5 w-5 text-primary' />
                      <span>{metric}</span>
                    </li>
                  ))}
                </ul>
                <div class='mt-8'>
                  <Button href={service.href}>View {service.title}</Button>
                </div>
              </div>
            </div>
          ))
        }
      </div>
    </section>

    <section class='bg-muted py-16 sm:py-20'>
      <div class='container text-center'>
        <div class='mx-auto max-w-2xl text-center'>
          <h2 class='text-3xl font-bold tracking-tight text-foreground sm:text-4xl'>By the Numbers</h2>
          <p class='mt-4 text-lg text-muted-foreground'>Our track record of delivering exceptional results</p>
        </div>
        <div class='mt-16 grid grid-cols-2 gap-8 lg:grid-cols-4'>
          {
            stats.map((stat) => (
              <div class='flex flex-col items-center gap-2 text-center'>
                <div class='text-4xl font-bold text-primary'>{stat.value}</div>
                <div class='text-muted-foreground'>{stat.label}</div>
              </div>
            ))
          }
        </div>
      </div>
    </section>
  </div>
</Layout>
