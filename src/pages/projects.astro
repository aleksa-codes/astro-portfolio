---
import Layout from '../components/layouts/Layout.astro';
import { Image } from 'astro:assets';
import { projects } from '../data/project';
---

<Layout
  title='Projects'
  description="Discover the diverse range of projects developed by Aleksa, a skilled junior React developer. From visually appealing user interfaces to user-friendly web applications, Aleksa's (or Alexa's) portfolio showcases their expertise and commitment to creating top-quality work. Explore Aleksa's portfolio to see their creations and learn about their capabilities as a React developer."
>
  <h1>Projects</h1>
  <div class='flex flex-col'>
    <!-- map and add <div class='divider'></div> after each project except the last one  -->
    {
      projects.map(({ name, desc, tech, github, demo, img }, index, array) => (
        <div>
          <div
            class={`flex flex-col-reverse items-center justify-between md:gap-8 ${
              index % 2 === 0 ? 'md:flex-row-reverse' : 'md:flex-row'
            }`}
          >
            <div
              class={`flex w-full flex-col text-left md:w-1/2 ${index % 2 === 0 ? 'md:text-left' : 'md:text-right'}`}
            >
              <div class='not-prose flex flex-col'>
                <div
                  class={`text-center text-3xl font-bold text-base-content ${
                    index % 2 === 0 ? 'md:text-left' : 'md:text-right'
                  }`}
                >
                  {name}
                </div>
                <ul class='list-none py-2 text-base'>
                  {desc.split('.').map((sentence, index, array) => (
                    <span>{index !== array.length - 1 ? <li class='py-1'>{sentence}.</li> : sentence}</span>
                  ))}
                </ul>
              </div>
              <div
                class={`flex flex-row justify-start gap-4 ${index % 2 === 0 ? 'md:flex-row' : 'md:flex-row-reverse'}`}
              >
                <p class='w-fit text-base font-bold'>
                  {tech.map((tech, index, array) => (
                    <span>
                      {index !== array.length - 1 ? (
                        <>
                          <span class='highlight'>{tech}</span>
                          <span> • </span>
                        </>
                      ) : (
                        <span class='highlight'>{tech}</span>
                      )}
                    </span>
                  ))}
                </p>
              </div>

              <div
                class={`flex flex-row justify-start gap-4 text-base ${
                  index % 2 === 0 ? 'md:flex-row' : 'md:flex-row-reverse'
                }`}
              >
                <a
                  href={demo}
                  target='_blank'
                  rel='noopener noreferrer'
                  class='flex flex-row items-center no-underline hover:text-primary'
                >
                  <svg
                    xmlns='http://www.w3.org/2000/svg'
                    class='icon icon-tabler icon-tabler-external-link'
                    width='32'
                    height='32'
                    viewBox='0 0 24 24'
                    stroke-width='2'
                    stroke='currentColor'
                    fill='none'
                    stroke-linecap='round'
                    stroke-linejoin='round'
                  >
                    <path stroke='none' d='M0 0h24v24H0z' fill='none' />
                    <path d='M11 7h-5a2 2 0 0 0 -2 2v9a2 2 0 0 0 2 2h9a2 2 0 0 0 2 -2v-5' />
                    <line x1='10' y1='14' x2='20' y2='4' />
                    <polyline points='15 4 20 4 20 9' />
                  </svg>
                  <span class='ml-1'>Demo</span>
                </a>
                <a
                  href={github}
                  target='_blank'
                  rel='noopener noreferrer'
                  class='flex flex-row items-center no-underline hover:text-primary'
                >
                  <svg
                    xmlns='http://www.w3.org/2000/svg'
                    class='icon icon-tabler icon-tabler-brand-github'
                    width='32'
                    height='32'
                    viewBox='0 0 24 24'
                    stroke-width='2'
                    stroke='currentColor'
                    fill='none'
                    stroke-linecap='round'
                    stroke-linejoin='round'
                  >
                    <path stroke='none' d='M0 0h24v24H0z' fill='none' />
                    <path d='M9 19c-4.3 1.4 -4.3 -2.5 -6 -3m12 5v-3.5c0 -1 .1 -1.4 -.5 -2c2.8 -.3 5.5 -1.4 5.5 -6a4.6 4.6 0 0 0 -1.3 -3.2a4.2 4.2 0 0 0 -.1 -3.2s-1.1 -.3 -3.5 1.3a12.3 12.3 0 0 0 -6.2 0c-2.4 -1.6 -3.5 -1.3 -3.5 -1.3a4.2 4.2 0 0 0 -.1 3.2a4.6 4.6 0 0 0 -1.3 3.2c0 4.6 2.7 5.7 5.5 6c-.6 .6 -.6 1.2 -.5 2v3.5' />
                  </svg>
                  <span class='ml-1'>Source</span>
                </a>
              </div>
            </div>
            <label for={'my-modal-' + index}>
              <Image
                src={img}
                alt={name}
                srcset={img + ' 1x,' + img + ' 2x'}
                width={400}
                height={300}
                format={'webp'}
                class='cursor-pointer rounded-lg shadow-md transition-all duration-300 ease-out hover:scale-105 hover:shadow-lg'
              />
            </label>

            <input type='checkbox' id={'my-modal-' + index} class='modal-toggle' />
            <label for={'my-modal-' + index} class='modal cursor-pointer'>
              <label class='modal-box w-11/12 max-w-4xl border border-indigo-900 bg-opacity-60 bg-clip-padding backdrop-blur-xl backdrop-filter dark:border-gray-200'>
                <label for={'my-modal-' + index} class='btn btn-circle btn-sm absolute right-2 top-2'>
                  ✕
                </label>
                <Image
                  src={img}
                  alt={name}
                  srcset={img + ' 1x,' + img + ' 2x'}
                  width={1000}
                  height={800}
                  format={'webp'}
                  class='rounded-lg shadow-md'
                />
                <div class='flex flex-row items-center justify-center gap-4'>
                  <a
                    href={demo}
                    target='_blank'
                    rel='noopener noreferrer'
                    class='btn btn-secondary flex flex-row items-center no-underline'
                  >
                    <svg
                      xmlns='http://www.w3.org/2000/svg'
                      class='icon icon-tabler icon-tabler-external-link'
                      width='32'
                      height='32'
                      viewBox='0 0 24 24'
                      stroke-width='2'
                      stroke='currentColor'
                      fill='none'
                      stroke-linecap='round'
                      stroke-linejoin='round'
                    >
                      <path stroke='none' d='M0 0h24v24H0z' fill='none' />
                      <path d='M11 7h-5a2 2 0 0 0 -2 2v9a2 2 0 0 0 2 2h9a2 2 0 0 0 2 -2v-5' />
                      <line x1='10' y1='14' x2='20' y2='4' />
                      <polyline points='15 4 20 4 20 9' />
                    </svg>
                    <span class='ml-1'>Demo</span>
                  </a>
                  <a
                    href={github}
                    target='_blank'
                    rel='noopener noreferrer'
                    class='btn flex flex-row items-center no-underline'
                  >
                    <svg
                      xmlns='http://www.w3.org/2000/svg'
                      class='icon icon-tabler icon-tabler-brand-github'
                      width='32'
                      height='32'
                      viewBox='0 0 24 24'
                      stroke-width='2'
                      stroke='currentColor'
                      fill='none'
                      stroke-linecap='round'
                      stroke-linejoin='round'
                    >
                      <path stroke='none' d='M0 0h24v24H0z' fill='none' />
                      <path d='M9 19c-4.3 1.4 -4.3 -2.5 -6 -3m12 5v-3.5c0 -1 .1 -1.4 -.5 -2c2.8 -.3 5.5 -1.4 5.5 -6a4.6 4.6 0 0 0 -1.3 -3.2a4.2 4.2 0 0 0 -.1 -3.2s-1.1 -.3 -3.5 1.3a12.3 12.3 0 0 0 -6.2 0c-2.4 -1.6 -3.5 -1.3 -3.5 -1.3a4.2 4.2 0 0 0 -.1 3.2a4.6 4.6 0 0 0 -1.3 3.2c0 4.6 2.7 5.7 5.5 6c-.6 .6 -.6 1.2 -.5 2v3.5' />
                    </svg>
                    <span class='ml-1'>Source</span>
                  </a>
                </div>
              </label>
            </label>
          </div>
          {index !== array.length - 1 && <div class='divider' />}
        </div>
      ))
    }

    <div class='flex w-full flex-row items-center justify-center pt-16'>
      <a
        href='https://github.com/aleksa-codes'
        target='_blank'
        rel='noopener noreferrer'
        class='btn btn-neutral flex flex-row items-center justify-center gap-2 transition-all duration-300 hover:scale-105 hover:shadow-md'
      >
        <svg
          xmlns='http://www.w3.org/2000/svg'
          class='icon icon-tabler icon-tabler-brand-github'
          width='24'
          height='24'
          viewBox='0 0 24 24'
          stroke-width='2'
          stroke='currentColor'
          fill='none'
          stroke-linecap='round'
          stroke-linejoin='round'
        >
          <path stroke='none' d='M0 0h24v24H0z' fill='none'></path>
          <path
            d='M9 19c-4.3 1.4 -4.3 -2.5 -6 -3m12 5v-3.5c0 -1 .1 -1.4 -.5 -2c2.8 -.3 5.5 -1.4 5.5 -6a4.6 4.6 0 0 0 -1.3 -3.2a4.2 4.2 0 0 0 -.1 -3.2s-1.1 -.3 -3.5 1.3a12.3 12.3 0 0 0 -6.2 0c-2.4 -1.6 -3.5 -1.3 -3.5 -1.3a4.2 4.2 0 0 0 -.1 3.2a4.6 4.6 0 0 0 -1.3 3.2c0 4.6 2.7 5.7 5.5 6c-.6 .6 -.6 1.2 -.5 2v3.5'
          ></path>
        </svg>
        <span class='uppercase'>View more on GitHub</span>
      </a>
    </div>
  </div>
</Layout>
