{
  "license": "MIT",
  "name": "astro-portfolio-v2",
  "type": "module",
  "version": "0.0.1",
  "scripts": {
    "astro": "astro",
    "dev": "astro dev --host",
    "start": "astro dev",
    "sync": "astro sync",
    "build:tailwind": "bun x @tailwindcss/cli -i src/styles/global.css -o dist/global.css --minify",
    "build:postcss": "postcss dist/global.css -o dist/global.css",
    "prettier": "prettier --write \"src/**/*.{js,jsx,ts,tsx,json,md,css,html,yaml,astro}\"",
    "build": "astro check && astro build && bun run build:tailwind && bun run build:postcss",
    "preview": "astro preview --host",
    "prod": "bun run prettier && bun run build && bun run preview",
    "decap": "bun x decap-server"
  },
  "dependencies": {
    "@ai-sdk/groq": "^1.1.14",
    "@astrojs/check": "^0.9.4",
    "@astrojs/mdx": "^4.2.0",
    "@astrojs/netlify": "^6.2.3",
    "@astrojs/preact": "^4.0.4",
    "@astrojs/rss": "^4.0.11",
    "@astrojs/sitemap": "^3.2.1",
    "@tailwindcss/cli": "^4.0.14",
    "@tailwindcss/postcss": "^4.0.14",
    "@tailwindcss/vite": "^4.0.14",
    "ai": "^4.1.61",
    "astro": "5.3.0",
    "astro-capo": "^0.0.1",
    "astro-compress": "^2.3.6",
    "astro-expressive-code": "^0.40.2",
    "astro-icon": "^1.1.5",
    "astro-og-canvas": "^0.7.0",
    "lucide-preact": "^0.475.0",
    "marked": "^15.0.7",
    "preact": "^10.26.2",
    "tailwind-merge": "^3.0.2",
    "tailwindcss": "^4.0.14",
    "typescript": "^5.8.2"
  },
  "devDependencies": {
    "@iconify-json/lucide": "^1.2.29",
    "@iconify-json/lucide-lab": "^1.2.3",
    "@iconify-json/simple-icons": "^1.2.28",
    "@tailwindcss/typography": "^0.5.16",
    "postcss": "^8.5.3",
    "postcss-cli": "^11.0.1",
    "prettier": "^3.5.3",
    "prettier-plugin-astro": "^0.14.1",
    "prettier-plugin-tailwindcss": "^0.6.11"
  }
}
