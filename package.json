{
  "license": "MIT",
  "name": "astro-portfolio-v2",
  "type": "module",
  "version": "0.0.1",
  "scripts": {
    "astro": "astro",
    "dev": "astro dev --host",
    "start": "astro dev",
    "sync": "astro sync",
    "build:tailwind": "npx @tailwindcss/cli -i src/styles/global.css -o dist/global.css --minify",
    "build:postcss": "postcss dist/global.css -o dist/global.css",
    "prettier": "prettier --write \"src/**/*.{js,jsx,ts,tsx,json,md,css,html,yaml,astro}\"",
    "build": "astro check && astro build && yarn build:tailwind && yarn build:postcss",
    "preview": "astro preview --host",
    "prod": "yarn prettier && yarn build && yarn preview",
    "decap": "npx decap-server"
  },
  "dependencies": {
    "@astrojs/check": "^0.9.4",
    "@astrojs/mdx": "^4.0.8",
    "@astrojs/rss": "^4.0.11",
    "@astrojs/sitemap": "^3.2.1",
    "@tailwindcss/cli": "^4.0.5",
    "@tailwindcss/postcss": "^4.0.5",
    "@tailwindcss/vite": "^4.0.5",
    "astro": "5.2.5",
    "astro-capo": "^0.0.1",
    "astro-compress": "^2.3.5",
    "astro-expressive-code": "^0.40.1",
    "astro-icon": "^1.1.5",
    "astro-og-canvas": "^0.5.6",
    "tailwind-merge": "^3.0.1",
    "tailwindcss": "^4.0.5",
    "typescript": "^5.7.2"
  },
  "devDependencies": {
    "@iconify-json/lucide": "^1.2.26",
    "@iconify-json/lucide-lab": "^1.2.3",
    "@iconify-json/simple-icons": "^1.2.24",
    "@tailwindcss/typography": "^0.5.16",
    "postcss": "^8.5.1",
    "postcss-cli": "^11.0.0",
    "prettier": "^3.5.0",
    "prettier-plugin-astro": "^0.14.1",
    "prettier-plugin-tailwindcss": "^0.6.11"
  }
}
